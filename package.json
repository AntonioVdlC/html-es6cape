{
  "name": "html-es6cape",
  "version": "1.0.5",
  "description": "Escape HTML special characters (including `)",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "type:check": "tsc --noEmit",
    "format": "prettier --write --ignore-unknown **/*.{js,ts}",
    "format:check": "prettier --check **/*.{js,ts}",
    "test": "jest",
    "prebuild": "rimraf dist && mkdir dist",
    "build": "npm run build:declaration && npm run build:esm && npm run build:cjs",
    "build:declaration": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:esm": "tsc --module es2015 --target es5 --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --target es5 --outDir dist/cjs",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AntonioVdlC/html-es6cape.git"
  },
  "keywords": [
    "html",
    "escape",
    "es6"
  ],
  "author": "Antonio Villagra De La Cruz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AntonioVdlC/html-es6cape/issues"
  },
  "homepage": "https://github.com/AntonioVdlC/html-es6cape#readme",
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.20",
    "babel-jest": "^26.6.3",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3"
  }
}
